{
  "Method": "get",
  "URL": "http://localhost:8080//v1/api/task/${send.Response.TaskId}",
  "Expect": {
    "Status": "done",
    "ReadCount":2,
    "WriteCount":2
  },
  "Variables": [
    {
      "Name": "status",
      "From": "Status"
    }
  ],
  "Repeat": 10,
  "SleepTimeMs": 2000,
  "Exit": "$status:!/running/"
}
